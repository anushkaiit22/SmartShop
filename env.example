# Application Settings
APP_NAME=SmartShop API
DEBUG=False
VERSION=1.0.0

# OpenAI API Key (for NLP processing)
OPENAI_API_KEY=your_openai_api_key_here

# Database Settings (optional for testing)
# Leave empty to run in memory-only mode
MONGODB_URL=
MONGODB_DB_NAME=smartshop

# Redis Settings (for caching)
REDIS_URL=redis://localhost:6379

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000", "http://127.0.0.1:8000"]

# Scraping Settings
SCRAPER_TIMEOUT=30
SCRAPER_DELAY=1.0
MAX_CONCURRENT_REQUESTS=5

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Settings
CACHE_TTL=300

# Default Location (Mumbai)
DEFAULT_LATITUDE=19.0760
DEFAULT_LONGITUDE=72.8777
DEFAULT_CITY=Mumbai

# Enabled Platforms
ENABLED_PLATFORMS=["amazon", "flipkart", "blinkit", "zepto", "meesho", "nykaa"] 